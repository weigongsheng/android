<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!--   <style name="activityTheme" parent="@android:style/Theme">
          <item name="android:windowIsTranslucent">true</item>
      </style>
   -->


    <style name="activityTheme" parent="android:Theme.Holo.Light.NoActionBar">

        <item name="android:windowAnimationStyle">@style/Animation</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Animation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <!-- <item name="android:activityCloseExitAnimation">@null</item> -->
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="defaultButtonStyle" >
        <item name="android:background">@drawable/default_button_effect</item>
        <item name="android:textColor">@color/default_btn_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">@dimen/item_margin_left</item>
        <item name="android:layout_marginRight">@dimen/item_margin_left</item>
    </style>
    <style name="defaultSysButtonStyle" >
        <item name="android:textColor">@color/default_btn_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">47dp</item>
    </style>
    <style name="defaultEditStyleStyle" >
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/edit_hint_color</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:width">@dimen/width_editText</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/item_margin_Right</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="defaultLableStyleStyle" >
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">@dimen/item_margin_Right</item>
        <item name="android:gravity">left</item>
    </style>


    <style name="BarTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowActionBar">true</item>
        <item name="android:logo">@null</item>
    </style>
    <style name="NOBarTheme" parent="android:Theme.Holo.Light.NoActionBar">

    </style>
    <style name="FullScreenThemeTheme" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">

    </style>

    <style name="detailItemLayout" >
        <item name="android:background"  >#ffffff</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:state_pressed">true</item>
        <item name="android:colorPressedHighlight">#0000ff</item>
    </style>

    <style name="detailItemLayoutWide" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/item_layout_height</item>
        <item name="android:background"  >#ffffff</item>
        <item name="android:paddingRight">@dimen/itme_layout_span</item>
        <item name="android:paddingLeft">@dimen/itme_layout_span</item>
    </style>
    <style name="detailItemLayoutWide_top"  parent="detailItemLayoutWide">
        <item name="android:background"  >@drawable/layout_item_style_top</item>
    </style>
    <style name="detailItemLayoutWide_inner"  parent="detailItemLayoutWide">
        <item name="android:background"  >@drawable/layout_item_style_inner</item>
    </style>
    <style name="detailItemLayoutWide_bottom"  parent="detailItemLayoutWide">
        <item name="android:background"  >@drawable/layout_item_style_bottom</item>
    </style>
    <style name="detailItemLayoutWide_single"  parent="detailItemLayoutWide">
        <item name="android:background"  >@drawable/layout_item_style_single</item>
    </style>

    <style name="divideStyle" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/dividHeight</item>
        <item name="android:background">@color/dark_gray_bg_3</item>
    </style>

    <style name="divideStyleInner" parent="divideStyle" >
        <item name="android:layout_marginLeft">@dimen/inner_divid_margin_Left</item>
    </style>

    <style name="darkLabelStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize" > @dimen/itemLabelTextSize</item>
        <item name="android:textColor">@color/dark_gray_bg_0</item>
    </style>
    <style name="numTip" >
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:textSize" > @dimen/size_num_tip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/count_tip_bg</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="readAlarmBtn">
        <item name="android:layout_height">@dimen/item_layout_height</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/btn_read</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btn_text_size</item>

    </style>
    <style name="defaultSubmitBtn" parent="readAlarmBtn">
        <item name="android:background">@color/color_light_blue</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="remove_red_button" parent="defaultButtonStyle" >
        <item name="android:background">@drawable/red_btn_bg</item>
        <item name="android:textColor">@color/btn_read</item>
        <item name="android:layout_width">wrap_content</item>
    </style>


</resources>
