<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hiuzhong.yuxun.RegistActivity"
     >

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <include
        android:id="@+id/head_title"
        layout="@layout/layout_simple_head"
        >
    </include>
    <View
        android:id="@+id/divid1"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/dark_gray_bg_2"
        android:layout_below="@+id/head_title"
        android:layout_marginTop="40dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/divid1"
        android:layout_centerHorizontal="true"
        android:divider="@color/dark_gray_bg_2"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/rowName"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:id="@+id/textView2"
            android:textSize="17sp"
            android:paddingLeft="10dp"

            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />

        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/phoneNum"
            android:text=""
            android:phoneNumber="true"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@id/textView2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>


    <View
        android:id="@+id/dividn"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/dark_gray_bg_1"
        android:layout_below="@+id/rowName"
        android:layout_marginTop="5dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dividn"
        android:layout_marginTop="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="下一步"
            android:id="@+id/btnNext"
            android:layout_alignParentTop="true"
            android:background="@drawable/default_but_press"
            android:layout_centerHorizontal="true"
            android:onClick="toNext"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="点击上面的“下一步”按钮即表示您同意"
            android:id="@+id/textView4"
            android:layout_below="@+id/btnNext"
            android:textColor="@color/dark_gray_bg_1"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="《用户协议》"
            android:layout_marginTop="20dp"
            android:id="@+id/textView5"
            android:textColor="@color/color_light_blue"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:onClick="toShowMsg"
            />
    </RelativeLayout>


</RelativeLayout>
    <RelativeLayout
        android:id="@+id/progressBarLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        android:background="@color/dark_gray_bg_2_trans"
        >
        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="68dp" />
    </RelativeLayout>
  </FrameLayout>
