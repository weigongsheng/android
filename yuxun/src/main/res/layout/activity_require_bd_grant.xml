<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hiuzhong.yuxun.RequireBdGrantActivity">
    <include
        android:id="@+id/head_title"
        layout="@layout/layout_simple_head"
        >
    </include>

    <RelativeLayout
        android:id="@+id/layoutReqGrant"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/head_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reqEditText"
            android:width="230dp"
            android:padding="7dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/item_margin_left"
            android:hint="输入需要授权的北斗号"
            android:numeric="integer"
            android:textSize="@dimen/edit_text_size"
            android:background="@drawable/gray_radius_border"
            />

        <Button
            android:layout_width="wrap_content"
            android:text="请求授权"
            style="@style/defaultButtonStyle"
            android:id="@+id/button3"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:onClick="reqGrant"
              />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/layoutReqGrant"
        style="@style/detailItemLayoutWide_top"
        android:id="@+id/layoutCancel1"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tipBdNum1"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
             />

        <Button
            android:layout_width="wrap_content"
            android:text="取消授权"
            android:id="@+id/cancelGran1"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/item_margin_Right"
            style="@style/remove_red_button"
            android:onClick="cancelGrant"

            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/layoutCancel1"
        style="@style/detailItemLayoutWide_inner"
        android:id="@+id/layoutCalcel2"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tipBdNum2"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />

        <Button
            android:layout_width="wrap_content"
            android:text="取消授权"
            android:id="@+id/cancelGran2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/item_margin_Right"
            style="@style/remove_red_button"
            android:onClick="cancelGrant"

            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/layoutCalcel2"
        style="@style/detailItemLayoutWide_bottom"
        android:id="@+id/layoutCalcel3"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tipBdNum3"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />

        <Button
            android:layout_width="wrap_content"
            android:text="取消授权"
            android:id="@+id/cancelGran3"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/item_margin_Right"
            style="@style/remove_red_button"
            android:onClick="cancelGrant"

            />
    </RelativeLayout>
    <View
        android:id="@+id/dividn"
        style="@style/divideStyle"
        android:layout_below="@+id/layoutCalcel3"
        />


</RelativeLayout>
