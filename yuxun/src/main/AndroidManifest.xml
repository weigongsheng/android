<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hiuzhong.yuxun" >

    <application
        android:name=".application.YuXunApplication"
        android:allowBackup="true"
        android:configChanges="keyboardHidden|orientation"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".ContactListActivity"
            android:label="@string/title_activity_contact_list"
            android:theme="@style/activityTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddContactActivity"
            android:label="@string/title_activity_add_contact" >
        </activity>
        <activity
            android:name=".ChatActivity"
            android:label="@string/title_activity_chat"
            android:theme="@style/activityTheme"
             >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hiuzhong.yuxun.activity.YuXunActivity" />
        </activity>
        <activity
            android:name=".DiscoverActivity"
            android:label="@string/title_activity_discover"
            android:theme="@style/activityTheme"
             >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hiuzhong.yuxun.activity.YuXunActivity" />
        </activity>
        <activity
            android:name=".MeActivity"
            android:label="@string/title_activity_me"
            android:theme="@style/activityTheme"
             >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hiuzhong.yuxun.activity.YuXunActivity" />
        </activity>
    </application>

</manifest>
